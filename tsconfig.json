{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["functions/**/*"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "rehype-add-classes": ["./src/types/rehype-add-classes"]
    }
  }
}
